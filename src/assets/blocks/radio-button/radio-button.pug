mixin radio-button(options)
  if(!options)
    - options = {}
  if(!options.text)
    - options.text = "It's a radio-button"
  -
    let text = "radio-button text"
    let form = "parrent form"
    let name = "name-radio-button"
    let value = "value-radio-button"

  label(class="radio-button")
    input(
      type="radio" 
      class="radio-button__input"
      form=options.form
      name=options.name
      value=options.value
    )
    span(class="radio-button__btn") 
    span(class="radio-button__text")= options.text