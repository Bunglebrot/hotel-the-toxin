extends ../../../layouts/UI-layout/page-layout

block variables
  - let title = "Cards";
  - let description = "";
  - let keywords = "";

block head

block content
  main(class="content-wrapper content-cards-wrapper")
    div(class="frame-column")
      include ../../../blocks/search-room-form/search-room-form
      include ../../../blocks/registration-form/registration-form

      +search-room-form({
        header: "Найдём номера под ваши пожелания"
      })

      +registration-form({
        header: "Регистрация аккаунта",
        question: "Уже есть аккаунт на Toxin"
      })

    div(class="frame-column")
      include ../../../blocks/price-calculator-form/price-calculator-form
      include ../../../blocks/sign-in-form/sign-in-form

      +price-calculator-form({
        items: [
          { service: "Сбор услуги: скидка 2 179₽", price: "0" },
          { service: "Сбор за допольнительные услуги", price: "300"}
        ]
      })

      +sign-in-form({
        header: "Войти",
        question: "Нет аккаунта на Toxin?"
      })

    div(class="frame-column")
      include ../../../blocks/datepicker/datepicker
      include ../../../blocks/preview-hotel-room/preview-hotel-room
      +datepicker()

      +preview-hotel-room({
        roomNumber: "888",
        roomStatus: "люкс",
        roomPrice: "9 990",
        countRating: "144",
        items: [
          { pathSrc : '/assets/img/image1.png', altAttr: 'image1' },
          { pathSrc : '/assets/img/image2.png', altAttr: 'image2' },
          { pathSrc : '/assets/img/image3.png', altAttr: 'image3' },
          { pathSrc : '/assets/img/image4.png', altAttr: 'image4' },
        ]
      })

      +preview-hotel-room({
        roomNumber: "840",
        roomPrice: "9 990",
        countRating: "64",
        items: [
          { pathSrc : '/assets/img/image2.png', altAttr: 'image2' },
          { pathSrc : '/assets/img/image10.png', altAttr: 'image2' },
          { pathSrc : '/assets/img/image11.png', altAttr: 'image3' },
          { pathSrc : '/assets/img/image12.png', altAttr: 'image4' },
        ]
      })